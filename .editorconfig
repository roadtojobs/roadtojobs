trim_trailing_whitespace = false

[*.{yml,yaml,vue,js,ts}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[package.json]
indent_size = 2

[{tsconfig.json,tsconfig.base.json}]
indent_size = 2